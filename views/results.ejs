<% // This is how to do comments in EJS, by the way... %>

<h2>Films</h2>

<% if (data) { %>
    <% data.forEach(t => { %>
    <div>
        <a href="/movie/<%= t.imdbID %>"<%= t.Title %></a>
        <h2><%+ t.year %></h2>
        <img src="<%= t.Poster%>" alt="Poster">
    </div>
    <% }) %>
<% } else { %> 
    <div>no movie found</div>   
<% } %>    


